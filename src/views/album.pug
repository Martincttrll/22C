---
template: album
pagination:
  data: spotify
  size: 1
  alias: album
title: "Album | 22Carbone"
---
extends ./_layouts/layout.pug
block content
    .album
        .album__wrapper(data-cover=album.cover)
            a.album__back__link(href="/discography/") Retour
            h1.album__title #{album.name} 
            .album__tracklist   
                
                table.album__tracklist__table
                    thead
                        tr
                            th Titre
                            th Feat .
                            th Album
                            th Dur√©e 
                    tbody
                        each track, index in album.tracks
                            tr
                                td.album__track__name
                                    a(href=track.spotify_url, target="_blank", rel="noopener noreferrer") #{track.name}
                                td.album__track__feat
                                    a(href=track.spotify_url, target="_blank", rel="noopener noreferrer") #{track.featuring || ''}
                                td.album__track__album
                                    a(href=track.spotify_url, target="_blank", rel="noopener noreferrer") #{track.album ? track.album : album.name}
                                - const duration = new Date(track.duration_ms).toISOString().substr(11, 8);
                                td.album__track__duration
                                    a(href=track.spotify_url, target="_blank", rel="noopener noreferrer") #{duration}
