---
template: album
pagination:
  data: spotify
  size: 1
  alias: album
title: "Album | 22Carbone"
---
extends ./_layouts/layout.pug
block content
    .album
        .album__wrapper
            img.album__cover(data-src=album.cover, alt=album.title)
            .album__info
                h1.album__title #{album.name}
                h2.album__release_date (#{album.release_date ? album.release_date.slice(0,4) : ""})
                h3.album__label #{album.label}
                h4.album__duration #{duration}
                h5.album__tracks #{album.tracks.length} tracks
                p.album__description #{album.description}
    
                ul
                    each track in album.tracks
                        - const duration = new Date(track.duration_ms).toISOString().substr(11, 8);
                        li #{track.name} - #{duration}

                .tracklist
                        h2.tracklist__title #{album.name}
                        
                        table.tracklist__table
                        thead
                            tr
                                th Titre
                                th Feat.
                                th Album
                                th Dur√©e
                        tbody
                            each track, index in album.tracks
                                tr
                                    td.track__name #{track.name}
                                    td.track__feat #{track.feat || ''}
                                    td.track__album #{album.name}
                                    - const duration = new Date(track.duration_ms).toISOString().substr(11, 8);
                                    td.track__duration #{duration}