---
template: album
pagination:
  data: spotify
  size: 1
  alias: album
title: "Album | 22Carbone"
---
extends ./_layouts/layout.pug
block content
    .album
        .album__wrapper(data-cover=album.cover)
            .album__back__link
                img(src="src/assets/pictos/chevron.svg", alt="Retour")
                | Retour
            h1.album__title #{album.name} 
            .album__tracklist   
                
                table.album__tracklist__table
                    thead
                        tr
                            th Titre
                            th Feat .
                            th Album
                            th Durée 
                            th(style="text-align:right") Écouter
                    tbody
                        each track, index in album.tracks
                            tr
                                td.album__track__name #{track.name}
                                td.album__track__feat  #{track.featuring ? "ft. " + track.featuring  : ''}
                                td.album__track__album #{track.album ? track.album : album.name}
                                - const duration = new Date(track.duration_ms).toISOString().substr(11, 8);
                                td.album__track__duration #{duration}
                                td.album__track__listen(style="text-align:right;") Play
                                    
